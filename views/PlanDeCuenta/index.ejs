<h4>Plan de cuentas del usuario</h4>


<% if (empresas.length == 0) { %>
  <h4>
    0 PlanDeCuenta
  </h4>
  <% } else { %>



    <ul class="collapsible">

      <% empresas.forEach((item,i)=>{%>
        <li class="active">
          <div class="collapsible-header">
            <i class="material-icons">filter_drama</i>
            <%= item.nombre%> - NIT :
              <%= item.nit%>
          </div>
          <div class="collapsible-body">

            <table>
              <thead>
                <th>#</th>
                <th>id</th>
                <th>nombre</th>

                <th>creado</th>
                <th>actualizado</th>
                <th colspan="3"></th>
              </thead>

              <tbody>
                <% item.plandecuentas.forEach((plan, i) => { %>
                  <tr>
                    <td>
                      <%= (i + 1) %>
                    </td>
                    <td>
                      <%= plan.id %>
                    </td>
                    <td>
                      <%= plan.nombre %>
                    </td>
                    <td>
                            <%  var fecha = new Date(plan.updatedAt)%>
              <%= fecha.toLocaleDateString()  %>
                    </td>
                    <td>
                            <%  var fecha = new Date(plan.updatedAt)%>
              <%= fecha.toLocaleDateString()  %>
                    </td>
                    <td>
                      <a href="/PlanDeCuenta/show/<%= plan.id %>"><i class="small material-icons circle ">visibility</i></a>
                    </td>
                    <td>
                      <a href="/PlanDeCuenta/delete/<%= plan.id %>"><i class="small material-icons circle ">delete_forever</i></a>
                    </td>
                    <td>
                      <a href="/PlanDeCuenta/edit/<%= plan.id %>"><i class="small material-icons circle ">settings</i></a>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>


            <a class="waves-effect waves-light btn modal-trigger" href="#modal1">Crear Nuevo Plan</a>

            <!-- Modal Structure -->
            <div id="modal1" class="modal">
              <form action="/plandecuenta/crear" method="POST">
                <div class="modal-content">
                  <h4>Crear Nuevo Plan de cuenta</h4>
                  <input name="idEmpresa" value="<%= item.id %>" hidden="true" required>
                  <input type="text" name="nombre" placeholder="nombre">
                </div>
                <div class="modal-footer">
                  <input class="modal-close waves-effect waves-green btn-flat" type="submit" value="CREAR">
              </form>
              <!-- <a href="#!" class="modal-close waves-effect waves-green btn-flat">Agree</a> -->
              </div>
            </div>
          </div>
        </li>
        <br>

        <% })%>

    </ul>




    <% } %>
